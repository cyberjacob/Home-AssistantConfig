    icon_style_active: "margin-top: -15px;"
    icon_style_inactive: "margin-top: -15px;"

kitchen_off:
    widget_type: scene
    entity: scene.kitchen_light_off
    title: Turn Off
    icon_on: mdi-stove
    icon_off: mdi-stove
    icon_style_active: "margin-top: -15px;"
    icon_style_inactive: "margin-top: -15px;"

kitchen_relax:
    widget_type: scene
    entity: scene.kitchen_light_relax
    title: Relax
    icon_on: mdi-stove
    icon_off: mdi-stove
    icon_style_active: "margin-top: -15px;"
